{% extends 'base.html.twig' %}

{% block title %}Sorteo index
{% endblock %}

{% block body %}
	<h1>Todos los sorteos</h1>

	<table class="table">
		<thead>
			<tr>

				<th>Name</th>
				<th>Fecha_inicio</th>
				<th>Fecha_fin</th>
				<th>Precio_ticket</th>
				<th>Tickets_totales</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for sorteo in sorteos %}
				<tr>

					<td>{{ sorteo.name }}</td>
					<td>{{ sorteo.fechaInicio ? sorteo.fechaInicio|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ sorteo.fechaFin ? sorteo.fechaFin|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ sorteo.precioTicket }}</td>
					<td>{{ sorteo.ticketsTotales }}</td>

					<td>
						{% if is_granted("ROLE_ADMIN") %}
							<a href="{{ path('app_sorteo_show', {'id': sorteo.id}) }}">show</a>
							<a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>
						{% endif %}
						<a href="{{ path('app_sorteo_comprar-ticket', {'id': sorteo.id}) }}">Comprar ticket</a>
					</td>

				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('app_sorteo_new') }}">Create new</a>
	{% endif %}
{% endblock %}
