{% extends 'base.html.twig' %}

{% block title %}Sorteo{% endblock %}

{% block body %}
    <h1>Sorteo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sorteo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sorteo.name }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ sorteo.fechaInicio ? sorteo.fechaInicio|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ sorteo.fechaFin ? sorteo.fechaFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Precio_ticket</th>
                <td>{{ sorteo.precioTicket }}</td>
            </tr>
            <tr>
                <th>Tickets_totales</th>
                <td>{{ sorteo.ticketsTotales }}</td>
            </tr>
            <tr>
                <th>Numero_ganador</th>
                <td>{{ sorteo.numeroGanador }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sorteo_index') }}">back to list</a>

    <a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>

    {{ include('sorteo/_delete_form.html.twig') }}
{% endblock %}
