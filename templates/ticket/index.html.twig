{% extends 'base.html.twig' %}

{% block title %}Ticket index
{% endblock %}

{% block body %}
	<h1>Ticket index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Numero</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for ticket in tickets %}
				<tr>
					<td>{{ ticket.numero }}</td>
					<td>
						<a href="{{ path('app_ticket_show', {'id': ticket.id}) }}">show</a>
						<a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>
					</td>
					<td>
						<a href="{{ path('app_apuesta_index', {'idTicket' : ticket.id, 'idSorteo':ticket.apuesta.sorteo.id}) }}">Comprar ticket</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('app_ticket_new') }}">Create new</a> #}
{% endblock %}
